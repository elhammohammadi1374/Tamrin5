<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammad.tamrin7.MainActivity"
    android:background="#dc9ee4de">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/colon"
        android:id="@+id/hours"
        android:text="15"
        android:textColor="#0037ff"
        android:background="#bfcaca"
        android:textSize="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/colon"
        android:text=":"
        android:textColor="#0037ff"
        android:background="#bfcaca"
        android:textSize="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/colon"
        android:id="@+id/minute"
        android:text="30"
        android:textSize="60dp"
        android:textColor="#0037ff"
        android:background="#bfcaca"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/colon"
        android:id="@+id/btn"
        android:text="اعلام ساعت"
        android:textColor="#0037ff"
        android:background="#bfcaca"
        android:textSize="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn"
        android:id="@+id/btn_About"
        android:text="انتخاب گوينده"
        android:textColor="#0037ff"
        android:background="#bfcaca"
        android:textSize="40dp"
        android:onClick="goToAboutActivity"/>


</RelativeLayout>
